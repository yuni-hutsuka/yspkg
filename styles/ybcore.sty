% -------------------------------------------------------------------------------------------------

% pagestyle

\NewPageStyle{novelpage}{
    font={\small},
    nombre={\quad\thepage\quad},
    gap=1\zw,
    running_head_position=top-left,
    nombre_position=top-left,
    odd_running_head={_section},
    even_running_head={_part},
    mark_format={ _part={#1}, _section={#1} }
}

\ModifyHeading{part}{
    number=false,
    format={\null\vfill {\Huge #1#2}\vfill},
    pagestyle=empty
}

\ModifyHeading{section}{
    number=false,
    pagebreak=clearpage
}


